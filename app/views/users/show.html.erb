<br>
<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize: "50x50") %>
<% else %>
  <%= image_tag "https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png", size: "50x50" %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>Email: <%= @user.email %></p>
<p>Password: ********</p>

<%= link_to 'プロフィールを編集する', edit_user_path(@user) %>
<br>
<%= link_to '宿泊施設を登録する', new_room_path %>

<h2>登録した宿泊施設</h2>
<table>
  <thead>
    <tr>
      <th>宿泊施設名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= link_to '編集', edit_room_path(room) %></td>
        <td><%= link_to '予約', new_reservation_path(room_id: room.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2>
  <%= link_to '予約確認', reservations_path %>
</h2>
<br>
