<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(resize: "50x50"), class: "rounded-circle" %>
        <% else %>
          <%= image_tag "https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png", size: "50x50", class: "rounded-circle" %>
        <% end %>
      </div>

      <div class="mt-3">
        <h4><strong>Name:</strong> <%= @user.name %></h4>
        <p>Email: <%= @user.email %></p>
        <p>Password: ********</p>
      </div>
      
      <div class="mt-3">
        <h2>登録した宿泊施設</h2>
        <table class="table">
          <thead>
            <tr>
              <th>宿泊施設名</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @user.rooms.each do |room| %>
              <tr>
                <td><%= link_to room.name, room_path(room) %></td>
                <td><%= link_to '編集', edit_room_path(room), class: "btn btn-info" %></td>
                <td><%= link_to '予約', new_reservation_path(room_id: room.id), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-3">
        <h2>
          <%= link_to '予約確認', reservations_path, class: "btn btn-warning" %>
        </h2>
      </div>
    </div>
  </div>
</div>
