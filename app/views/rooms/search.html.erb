<div class="container">
  <h1 class="text-center">Search Results</h1>

  <p class="text-center">Total rooms found: <%= @rooms.count %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Address</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= link_to room.name, room_path(room) %></td>
          <td><%= room.description %></td>
          <td><%= room.address %></td>
          <td><%= room.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if user_signed_in? %>
    <%= link_to 'Back', user_path(current_user), class: 'btn btn-primary' %>
  <% else %>
    <%= link_to 'Back', rooms_path, class: 'btn btn-primary' %>
  <% end %>

</div>
