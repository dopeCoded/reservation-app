<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @room.price %>
</p>

<p>
  <strong>Address:</strong>
  <%= @room.address %>
</p>

<p>
  <strong>Image:</strong>
  <% if @room.image.attached? %>
    <%= image_tag(@room.image.variant(resize: "500x500")) %>
  <% else %>
    <%= image_tag("https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png", size: "500x500") %>
  <% end %>
</p>

<%= link_to '編集する', edit_room_path(@room) %>
<br>
<%= link_to '戻る', user_path(@room.user) %>
<br>