<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Room Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Created At</th>
      <th>Actions</th> <!-- Add this if it doesn't exist -->
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.image.attached? %>
            <%= image_tag(room.image.variant(resize: "100x100"), class: "img-fluid") %>
          <% else %>
            <%= image_tag("https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png", size: "100x100", class: "img-fluid") %>
          <% end %>
        </td>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= room.description %></td>
        <td><%= room.price %>/day</td>
        <td><%= room.created_at.to_date %></td>
        <td>
          <% if current_user == room.user %>
            <%= link_to 'Edit', edit_room_path(room), class: 'btn btn-primary' %>
          <% end %>
          <%= link_to 'Book', new_reservation_path(room_id: room.id), class: 'btn btn-success' %> <!-- Replace with your booking path -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
