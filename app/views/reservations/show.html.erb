<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Reservation Details</h5>

          <p class="card-text">
            <strong>Number of nights:</strong>
            <%= ((@reservation.check_out - @reservation.check_in) / 86400).to_i %>
          </p>

          <p class="card-text">
            <strong>Number of guests:</strong>
            <%= @reservation.guests %>
          </p>

          <p class="card-text">
            <strong>Total cost:</strong>
            <%= @reservation.total_cost %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-12">
      <%= link_to '戻る', request.referer, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
